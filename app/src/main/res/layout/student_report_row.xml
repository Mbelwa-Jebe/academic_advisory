<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="12dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">


            <TextView
                android:id="@+id/report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/card4"
                android:gravity="center_horizontal"
                android:text="May 12 2018"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/report_studentfname"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_date"
                android:gravity="center_horizontal"
                android:text="hello2"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/report_studentlname"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_studentfname"
                android:gravity="center_horizontal"
                android:text="hello2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/report_studentid"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_studentlname"
                android:gravity="center_horizontal"
                android:text="hello2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/report"
                android:layout_width="200dp"
                android:layout_height="104dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/report_studentfname"
                android:gravity="center"
                android:text="TextView" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>